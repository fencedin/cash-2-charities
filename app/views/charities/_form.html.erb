<%= render 'layouts/errors', :object => @charity %>
<%= form_for(@charity) do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name *" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :mission, "Mission *"%>
    <%= f.text_field :mission, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: 6 %>
  </div>
  <div class="form-group">
    <%= f.label :founded, "Date Founded" %>
    <%= f.date_field :founded, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>

